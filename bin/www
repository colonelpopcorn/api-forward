#!/usr/bin/env node
"use strict";

//module dependencies
var HttpHelper = require("../build/app").HttpHelper;
var Server = require("../build/app").Server;
var http = require("http");

//create http server
var app = new Server();
var httpPort = HttpHelper.normalizePort(process.env.PORT, 8080);
var listeners = HttpHelper.getEventListeners();
app.set("port", httpPort);
var httpServer = HttpHelper.createServer({
  app,
  httpPort,
  onError: listeners.onError,
  onListening: listeners.onListening
});
